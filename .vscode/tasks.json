{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug-build",
      "type": "shell",
      "command": "make",
      "args": [
        "debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "release-build",
      "type": "shell",
      "command": "make",
      "args": [
        "release"
      ],
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "test-build",
      "type": "shell",
      "command": "make",
      "args": [
        "test-build"
      ],
      "group": {
        "kind": "build",
      }
    },
  ]
}