  "version": "0.2.0",
  "configurations": [
    {
      "preLaunchTask": "debug-build",
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/bin/debug/scrit",
      "args": ["testop.scrit",],
      "cwd": "${workspaceFolder}"
    },
    {
      "preLaunchTask": "release-build",
      "type": "lldb",
      "request": "launch",
      "name": "Release",
      "program": "${workspaceFolder}/bin/release/scrit",
      "args": ["test.scrit"],
      "cwd": "${workspaceFolder}"
    },
    {
      "preLaunchTask": "test-build",
      "type": "lldb",
      "request": "launch",
      "name": "Test",
      "program": "${workspaceFolder}/bin/test/scrit",
      "cwd": "${workspaceFolder}",
    },
  ]
}